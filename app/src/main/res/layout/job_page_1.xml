<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1AFF9800"
    android:elevation="5dp"
    android:padding="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="5dp"
            app:cardCornerRadius="3dp"
            app:contentPadding="2sp"
            app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ScrollView
                android:id="@+id/scrollView_frag1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="5sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/lc_gettingstart"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/alegreya_sans"
                        android:text="Company Details"
                        android:textColor="@color/OrangeDark"
                        android:textSize="20dp"
                        android:textStyle="bold" />


                    <View
                        android:id="@+id/divider4"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/DarkGrey" />

                    <TextView
                        android:id="@+id/tv_jobTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/alegreya_sans"
                        android:text="@string/Job_Title"
                        android:textColor="@android:color/black"
                        android:textSize="16dp" />

                    <EditText
                        android:id="@+id/et_jobTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/border_grey_back_white_round_corners"
                        android:fontFamily="@font/alegreya_sans"
                        android:inputType="textPersonName|textCapWords"
                        android:padding="10dp"
                        android:singleLine="true"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/tv_jobDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/alegreya_sans"
                        android:text="@string/Job_Description"
                        android:textColor="@android:color/black"
                        android:textSize="16dp" />

                    <EditText
                        android:id="@+id/et_jobDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/border_grey_back_white_round_corners"
                        android:fontFamily="@font/alegreya_sans"
                        android:inputType="textLongMessage|textMultiLine|textPersonName|text|textImeMultiLine|textPostalAddress|textCapWords"
                        android:minHeight="80dp"
                        android:padding="10dp"
                        android:singleLine="false"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/tv_companyName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/alegreya_sans"
                        android:text="@string/company_Name"
                        android:textColor="@android:color/black"
                        android:textSize="16dp" />

                    <EditText
                        android:id="@+id/et_companyName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/border_grey_back_white_round_corners"
                        android:fontFamily="@font/alegreya_sans"
                        android:inputType="textPersonName|textCapWords"
                        android:padding="10dp"
                        android:singleLine="true"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/tv_contactName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/alegreya_sans"
                        android:text="@string/contactPersonName"
                        android:textColor="@android:color/black"
                        android:textSize="16dp" />

                    <EditText
                        android:id="@+id/et_contactName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/back_grey_round_corners"
                        android:fontFamily="@font/alegreya_sans"
                        android:inputType="textPersonName|textCapWords"
                        android:padding="10dp"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/tv_contactNum"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/alegreya_sans"
                        android:text="@string/Contact_Number"
                        android:textColor="@android:color/black"
                        android:textSize="16dp" />

                    <EditText
                        android:id="@+id/et_contactNum"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/back_grey_round_corners"
                        android:digits="0123456789"
                        android:fontFamily="@font/alegreya_sans"
                        android:inputType="number|phone"
                        android:maxLength="10"
                        android:padding="10dp"
                        android:textSize="18dp" />

                    <RadioGroup
                        android:id="@+id/rg_numVisibility"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:checkedButton="@id/radio_callOnTime">

                        <RadioButton
                            android:id="@+id/radio_callYes"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Number Visible to Job Seekers" />

                        <RadioButton
                            android:id="@+id/radio_callOnTime"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Number Visible Only between 10 AM - 5 PM" />

                        <RadioButton
                            android:id="@+id/radio_onlyEmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Number Not Visible. Only Email" />
                    </RadioGroup>


                    <TextView
                        android:id="@+id/tv_contactEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/alegreya_sans"
                        android:text="Contact Email"
                        android:textColor="@android:color/black"
                        android:textSize="16dp" />

                    <EditText
                        android:id="@+id/et_contactEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/back_grey_round_corners"
                        android:fontFamily="@font/alegreya_sans"
                        android:inputType="textWebEmailAddress|textEmailAddress"
                        android:padding="10dp"
                        android:textSize="18dp" />

                </LinearLayout>
            </ScrollView>
        </androidx.cardview.widget.CardView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_continue_frag1"
                android:layout_width="120dp"
                android:layout_height="40dp"
                app:cardBackgroundColor="@color/Orange"
                app:cardCornerRadius="20dp"
                app:cardElevation="5dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/alegreya_sans"
                    android:text="@string/Continue"
                    android:textColor="@android:color/white"
                    android:textSize="18dp"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>