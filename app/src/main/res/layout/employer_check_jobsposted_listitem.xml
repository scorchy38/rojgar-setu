<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_employer_checkjobsposted"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="4dp"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="2dp"
    app:cardElevation="2dp"
    app:contentPaddingBottom="5sp"
    app:contentPaddingTop="5sp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <TextView
                android:id="@+id/tv_checkjobstatus_jobtype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:background="@drawable/back_orange_round_corners"
                android:fontFamily="@font/alegreya_sans"
                android:paddingLeft="8dp"
                android:paddingTop="6dp"
                android:paddingRight="8dp"
                android:paddingBottom="6dp"
                android:text="Job Type"
                android:textColor="@color/Orange"
                android:textSize="18dp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_checkjobstatus_company"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:fontFamily="@font/alegreya_sans"
                android:text="Company"
                android:textColor="@color/DarkGrey"
                android:textSize="18dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/tv_checkjobstatus_jobtype"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/tv_checkjobstatus_jobtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="15dp"
            android:fontFamily="@font/alegreya_sans"
            android:letterSpacing="0.1"
            android:paddingRight="15sp"
            android:text="Job Title"

            android:textColor="@color/OrangeDark"
            android:textSize="23dp"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center|left"
            android:paddingLeft="15dp"
            android:paddingRight="15sp">


            <TextView
                android:id="@+id/no_of_applicants_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="8dp"
                android:fontFamily="@font/alegreya_sans"
                android:gravity="left"
                android:text="@string/No_of_Applicants_Left"
                android:textColor="@android:color/black"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/tv_checkjobstatus_noofapplicants"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/alegreya_sans"
                android:gravity="left"
                android:text="0"
                android:textColor="@color/Orange"
                android:textSize="17dp"
                android:textStyle="bold" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center|left"
            android:paddingLeft="15dp"
            android:paddingRight="15sp">


            <TextView
                android:id="@+id/no_of_accepted_applicants"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="8dp"
                android:fontFamily="@font/alegreya_sans"
                android:gravity="left"
                android:text="@string/No_of_Accepted_Applicants"
                android:textColor="@android:color/black"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/tv_checkjobstatus_accepted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/alegreya_sans"
                android:gravity="left"
                android:text="0"
                android:textColor="@color/Orange"
                android:textSize="17dp"
                android:textStyle="bold" />


        </LinearLayout>


        <View
            android:id="@+id/divider18"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp"
            android:background="?android:attr/listDivider" />

        <TextView
            android:id="@+id/tv_checkjobstatus_viewdetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5sp"
            android:clickable="false"
            android:fontFamily="@font/alegreya_sans"
            android:text="@string/View_Details"
            android:textAlignment="center"
            android:textColor="#2D87DE"
            android:textSize="18dp" />


    </LinearLayout>
</androidx.cardview.widget.CardView>